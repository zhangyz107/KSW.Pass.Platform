<Window x:Class="KSW.ATE01.Start.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KSW.ATE01.Start.Views"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="450" Width="800"
        prism:ViewModelLocator.AutoWireViewModel="True">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadingCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <TabControl Style="{StaticResource MaterialDesignFilledTabControl}" HorizontalContentAlignment="Left">
        <TabItem Header="Project" Margin="8,0">
            <ContentControl Padding="8,0" Content="{Binding ProjectView}"></ContentControl>
        </TabItem>

        <TabItem Header="Help">
            <ContentControl Padding="8,0" Content="{Binding HelpView}"></ContentControl>
        </TabItem>
    </TabControl>
</Window>
